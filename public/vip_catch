        function logMessage(message, isError = false, forceLog = false) {
          const alwaysLogMessages = ["ìº í˜ì¸ í™•ì¸ ì‹œì‘...", "ë‹¤ìŒ í™•ì¸ ì˜ˆì •:", "ì´ˆê¸°", "ì‚¬ìš©ì ìƒí˜¸ì‘ìš©", "ê¶Œí•œ"];
          const shouldLog = forceLog || isError || alwaysLogMessages.some(keyword => message.includes(keyword)) || message.includes("ìƒˆ ìº í˜ì¸") || message.includes("ì˜¤ë¥˜");

          if (shouldLog) {
            const logEntry = document.createElement('div');
            logEntry.className = 'log-item';
            if (isError) {
              logEntry.classList.add('error-log');
            }
            logEntry.innerHTML = `[${new Date().toLocaleTimeString()}] ${message}`;
            if (logDiv) { // logDivê°€ ì¡´ì¬í•˜ëŠ”ì§€ í™•ì¸
                logDiv.insertBefore(logEntry, logDiv.firstChild);
                if (logDiv.children.length > 50) {
                logDiv.removeChild(logDiv.lastChild);
                }
            } else {
                console.warn("logDiv ìš”ì†Œë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤. ë¡œê·¸ ë©”ì‹œì§€:", message);
            }
          }
        }

        function requestNotificationPermission() {
          if (!("Notification" in window)) {
            logMessage("ì´ ë¸Œë¼ìš°ì €ëŠ” ë°ìŠ¤í¬í†± ì•Œë¦¼ì„ ì§€ì›í•˜ì§€ ì•ŠìŠµë‹ˆë‹¤.", true, true);
            return;
          }
          if (Notification.permission === "granted") {
            logMessage("ë¸Œë¼ìš°ì € ì•Œë¦¼ ê¶Œí•œì´ ì´ë¯¸ í—ˆìš©ë˜ì–´ ìˆìŠµë‹ˆë‹¤.", false, true);
            return;
          }
          if (Notification.permission !== "denied") {
            Notification.requestPermission().then(permission => {
              if (permission === "granted") {
                logMessage("ë¸Œë¼ìš°ì € ì•Œë¦¼ ê¶Œí•œì´ í—ˆìš©ë˜ì—ˆìŠµë‹ˆë‹¤.", false, true);
              } else if (permission === "denied") {
                logMessage("ë¸Œë¼ìš°ì € ì•Œë¦¼ ê¶Œí•œì´ ê±°ë¶€ë˜ì—ˆìŠµë‹ˆë‹¤. ë¸Œë¼ìš°ì € ì„¤ì •ì—ì„œ ë³€ê²½í•´ì£¼ì„¸ìš”.", true, true);
              } else {
                logMessage("ë¸Œë¼ìš°ì € ì•Œë¦¼ ê¶Œí•œ ìš”ì²­ì´ ì‚¬ìš©ìì— ì˜í•´ ë‹«í˜”ìŠµë‹ˆë‹¤.", false, true);
              }
            });
          } else {
            logMessage("ë¸Œë¼ìš°ì € ì•Œë¦¼ ê¶Œí•œì´ ì´ë¯¸ ê±°ë¶€ë˜ì–´ ìˆìŠµë‹ˆë‹¤. ë¸Œë¼ìš°ì € ì„¤ì •ì—ì„œ ì§ì ‘ ê¶Œí•œì„ í—ˆìš©í•´ì•¼ í•©ë‹ˆë‹¤.", true, true);
          }
        }

        function displayCampaigns(campaignList, newCampaignIds = []) {
          if (!campaignsDiv) {
              console.warn("campaignsDiv ìš”ì†Œë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.");
              return;
          }
          campaignsDiv.innerHTML = '';
          if (currentCampaignCountEl) currentCampaignCountEl.textContent = campaignList.length;


          if (campaignList.length === 0) {
            campaignsDiv.innerHTML = '<div>í˜„ì¬ ì§„í–‰ ì¤‘ì¸ ì‡¼í•‘ ìº í˜ì¸ì´ ì—†ìŠµë‹ˆë‹¤.</div>';
            return;
          }

          campaignList.forEach(item => {
            const campaignElement = document.createElement('div');
            campaignElement.className = 'campaign';
            const socialColor = item.socialColor || '#777777';
            const displayName = item.displayName || 'ì´ë¦„ ì—†ëŠ” ìº í˜ì¸';
            const finalPriceText = item.finalPrice != null ? item.finalPrice.toLocaleString() : 'ê°€ê²© ì •ë³´ ì—†ìŒ';
            const isNew = newCampaignIds.includes(item._id);

            campaignElement.innerHTML = `
              <img src="${item.thumbnail}" alt="${displayName} ì¸ë„¤ì¼" loading="lazy">
              <div class="info">
                <div class="shop-platform" style="background-color:${socialColor};">${item.socialName || 'í”Œë«í¼ ì •ë³´ ì—†ìŒ'}</div>
                <div class="name">
                  ${displayName}
                  ${isNew ? '<span class="new-tag">NEW!</span>' : ''}
                </div>
                <div class="price-info">
                  <span class="price">${finalPriceText}ì›</span>
                  ${item.totalPrice > item.finalPrice ? `<span class="oldprice">${item.totalPrice.toLocaleString()}ì›</span>` : ''}
                </div>
              </div>
            `;
            if (isNew) {
                campaignElement.style.cssText += "border: 2px solid #E84545 !important; animation: pulseBorder 1s infinite alternate;";
            }
            campaignsDiv.appendChild(campaignElement);
          });
          if (!document.getElementById('pulseAnimationStyle')) {
            const styleSheet = document.createElement("style");
            styleSheet.id = "pulseAnimationStyle";
            styleSheet.innerText = "@keyframes pulseBorder { 0% { border-color: #E84545; } 100% { border-color: #ff8c8c; } }";
            document.head.appendChild(styleSheet);
          }
        }

        function updateNextCheckTimeDisplay(nextTime) {
            const now = new Date();
            const diffSeconds = Math.round((nextTime.getTime() - now.getTime()) / 1000);
            if (countdownEl) countdownEl.textContent = `${nextTime.toLocaleTimeString()} (${diffSeconds > 0 ? diffSeconds : 0}ì´ˆ í›„)`;
        }

        function calculateNextCheckTime() {
            const now = new Date();
            let currentMinute = now.getMinutes();
            let currentHour = now.getHours();
            let currentDay = now.getDate();
            let currentMonth = now.getMonth();
            let currentYear = now.getFullYear();
            let currentSecond = now.getSeconds();

            let nextRunTime = null;
            CHECK_SECONDS_PAST_MINUTE.sort((a, b) => a - b);

            for (const sec of CHECK_SECONDS_PAST_MINUTE) {
                if (currentSecond < sec) {
                    nextRunTime = new Date(currentYear, currentMonth, currentDay, currentHour, currentMinute, sec, 0);
                    break;
                }
            }

            if (!nextRunTime) {
                currentMinute++;
                if (currentMinute >= 60) {
                    currentMinute = 0;
                    currentHour++;
                    if (currentHour >= 24) {
                        currentHour = 0;
                        nextRunTime = new Date(currentYear, currentMonth, currentDay + 1, currentHour, currentMinute, CHECK_SECONDS_PAST_MINUTE[0], 0);
                    } else {
                        nextRunTime = new Date(currentYear, currentMonth, currentDay, currentHour, currentMinute, CHECK_SECONDS_PAST_MINUTE[0], 0);
                    }
                } else {
                    nextRunTime = new Date(currentYear, currentMonth, currentDay, currentHour, currentMinute, CHECK_SECONDS_PAST_MINUTE[0], 0);
                }
            }
            return nextRunTime;
        }

        function startPageTitleNotification(newCampaignCount) {
            stopPageTitleNotification();
            let isAltTitle = false;
            const baseTitle = `(${newCampaignCount}) ìƒˆ ìº í˜ì¸!`;
            document.title = `ğŸ”¥ ${baseTitle} - ${ORIGINAL_TITLE}`;

            titleNotificationInterval = setInterval(() => {
                document.title = isAltTitle ? `âœ¨ ${baseTitle} - ${ORIGINAL_TITLE}` : `ğŸ”¥ ${baseTitle} - ${ORIGINAL_TITLE}`;
                isAltTitle = !isAltTitle;
            }, 800);
            window.addEventListener('focus', stopPageTitleNotificationAndRemoveListener);
        }

        function stopPageTitleNotification() {
            if (titleNotificationInterval) {
                clearInterval(titleNotificationInterval);
                titleNotificationInterval = null;
            }
            document.title = ORIGINAL_TITLE;
        }

        function stopPageTitleNotificationAndRemoveListener() {
            stopPageTitleNotification();
            window.removeEventListener('focus', stopPageTitleNotificationAndRemoveListener);
        }

        function showNewCampaignModal(newCampaignDetails) {
            if (!modalTitleEl || !modalCampaignListEl || !modalOverlay) {
                console.warn("ëª¨ë‹¬ ê´€ë ¨ ìš”ì†Œë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.");
                return;
            }
            modalTitleEl.textContent = `âœ¨ ìƒˆë¡œìš´ ìº í˜ì¸ ${newCampaignDetails.length}ê°œ ë°œê²¬!`;
            let listHtml = '<ul>';
            newCampaignDetails.forEach(campaign => {
                listHtml += `<li>${campaign.displayName} (${campaign.socialName})</li>`;
            });
            listHtml += '</ul>';
            modalCampaignListEl.innerHTML = listHtml;
            modalOverlay.classList.add('active');
        }

        async function checkNewCampaigns() {
          try {
            const response = await fetch(API_URL, {
              credentials: "omit",
              headers: { 'Accept': 'application/json' }
            });

            if (!response.ok) {
              throw new Error(`API ìš”ì²­ ì‹¤íŒ¨: ${response.status} ${response.statusText}`);
            }

            const jsonResponse = await response.json();
            const campaignData = Array.isArray(jsonResponse.data) ? jsonResponse.data : [];
            const activeShoppingCampaigns = campaignData.filter(
              campaign => campaign.type === "ì‡¼í•‘" && campaign.applyFinish === false
            );

            const previousIds = loadPreviousCampaignIds();
            const currentIds = activeShoppingCampaigns.map(campaign => campaign._id);

            let newCampaignsFoundIds = [];
            if (!isFirstLoad) {
                newCampaignsFoundIds = currentIds.filter(id => !previousIds.includes(id));
            }
            
            if (isFirstLoad || newCampaignsFoundIds.length > 0 || (previousIds.length !== currentIds.length && !isFirstLoad) ) {
                logMessage(`ID ë¹„êµ: ì´ì „ ${previousIds.length}ê°œ, í˜„ì¬ ${currentIds.length}ê°œ. ${newCampaignsFoundIds.length > 0 ? `<span class="highlight">${newCampaignsFoundIds.length}ê°œ ì‹ ê·œ ë°œê²¬!</span>` : 'ì‹ ê·œ ì—†ìŒ.'} (ì²« ë¡œë“œ: ${isFirstLoad})`, false, true);
            }

            displayCampaigns(activeShoppingCampaigns, newCampaignsFoundIds);

            if (newCampaignsFoundIds.length > 0) {
              const newCampaignDetails = newCampaignsFoundIds.map(id => {
                return activeShoppingCampaigns.find(c => c._id === id);
              }).filter(Boolean);

              startPageTitleNotification(newCampaignDetails.length);
              showNewCampaignModal(newCampaignDetails);

              if (window.Notification && Notification.permission === "granted") {
                newCampaignDetails.slice(0, 3).forEach(campaign => {
                  new Notification("âœ¨ ìƒˆë¡œìš´ ìº£ì¹˜ë·° ìº í˜ì¸!", {
                    body: campaign.displayName,
                    icon: campaign.thumbnail,
                    tag: `catchview-${campaign._id}`
                  });
                });
                if (newCampaignDetails.length > 3) {
                    new Notification("âœ¨ ìƒˆë¡œìš´ ìº£ì¹˜ë·° ìº í˜ì¸!", {
                        body: `ê·¸ ì™¸ ${newCampaignDetails.length - 3}ê°œì˜ ìƒˆ ìº í˜ì¸ì´ ë” ìˆìŠµë‹ˆë‹¤.`,
                        tag: `catchview-more`
                    });
                }
                logMessage(`ë¸Œë¼ìš°ì € ì•Œë¦¼ ${Math.min(newCampaignDetails.length, 3) + (newCampaignDetails.length > 3 ? 1:0)}ê°œ ë°œì†¡ë¨.`);
              } else if (Notification.permission !== "denied") {
                logMessage("ë¸Œë¼ìš°ì € ì•Œë¦¼ ê¶Œí•œì´ í—ˆìš©ë˜ì§€ ì•Šì•˜ìŠµë‹ˆë‹¤. ì•Œë¦¼ì„ ë°›ìœ¼ë ¤ë©´ ê¶Œí•œì„ í—ˆìš©í•´ì£¼ì„¸ìš”.");
              }

              if (userInteracted) {
                if(alertSound) { // alertSound ìš”ì†Œ í™•ì¸
                    alertSound.play()
                    .then(() => logMessage("ì•Œë¦¼ ì†Œë¦¬ ì¬ìƒë¨."))
                    .catch(e => {
                        logMessage("ì•Œë¦¼ ì†Œë¦¬ ì¬ìƒ ì‹¤íŒ¨: " + e.message, true);
                        if (!document.getElementById('audio-permission-notice') && logDiv) {
                            const notice = document.createElement('p');
                            notice.id = 'audio-permission-notice';
                            notice.textContent = 'ì•Œë¦¼ ì†Œë¦¬ë¥¼ ì¬ìƒí•˜ë ¤ë©´ í˜ì´ì§€ì˜ ì•„ë¬´ ê³³ì´ë‚˜ í´ë¦­í•´ì£¼ì„¸ìš”.';
                            logDiv.parentNode.insertBefore(notice, logDiv);
                        }
                    });
                } else {
                    console.warn("alertSound ìš”ì†Œë¥¼ ì°¾ì„ ìˆ˜ ì—†ìŠµë‹ˆë‹¤.");
                }
              } else {
                logMessage("ì‚¬ìš©ì ìƒí˜¸ì‘ìš© ì „ì—ëŠ” ì•Œë¦¼ ì†Œë¦¬ê°€ ìë™ ì¬ìƒë˜ì§€ ì•ŠìŠµë‹ˆë‹¤. í˜ì´ì§€ë¥¼ í´ë¦­í•´ì£¼ì„¸ìš”.");
                if (!document.getElementById('audio-permission-notice') && logDiv) {
                    const notice = document.createElement('p');
                    notice.id = 'audio-permission-notice';
                    notice.textContent = 'ì•Œë¦¼ ì†Œë¦¬ë¥¼ ì¬ìƒí•˜ë ¤ë©´ í˜ì´ì§€ì˜ ì•„ë¬´ ê³³ì´ë‚˜ í´ë¦­í•´ì£¼ì„¸ìš”.';
                    logDiv.parentNode.insertBefore(notice, logDiv);
                }
              }

            } else if (!isFirstLoad) {
              stopPageTitleNotification(); 
            } else {
              logMessage(`ì´ˆê¸° ${activeShoppingCampaigns.length}ê°œ ìº í˜ì¸ ë¡œë“œ ì™„ë£Œ. ë‹¤ìŒ í™•ì¸ë¶€í„° ìƒˆ ìº í˜ì¸ ì•Œë¦¼ì„ ì‹œì‘í•©ë‹ˆë‹¤.`, false, true);
            }

            saveCurrentCampaignIds(currentIds);
            isFirstLoad = false;

          } catch (error) {
            console.error("ìº í˜ì¸ í™•ì¸ ì¤‘ ì˜¤ë¥˜:", error);
            logMessage(`ìº í˜ì¸ í™•ì¸ ì‹¤íŒ¨: ${error.message}`, true, true);
            stopPageTitleNotification();
          } finally {
            if(lastCheckedTimeEl) lastCheckedTimeEl.textContent = new Date().toLocaleTimeString();
            scheduleNextCheck();
          }
        }

        function scheduleNextCheck() {
            if (nextCheckTimeoutId) {
                clearTimeout(nextCheckTimeoutId);
            }

            const nextRunTime = calculateNextCheckTime();
            const delay = nextRunTime.getTime() - new Date().getTime();
            updateNextCheckTimeDisplay(nextRunTime);

            if (delay >= 0) {
                nextCheckTimeoutId = setTimeout(() => {
                    checkNewCampaigns();
                }, delay);
            } else {
                logMessage(`ë”œë ˆì´ ê³„ì‚° ì˜¤ë¥˜ (í˜„ì¬ ì‹œê°„ë³´ë‹¤ ê³¼ê±°ë¡œ ì˜ˆì•½ë¨: ${delay}ms). 10ì´ˆ í›„ ê°•ì œ ì¬ì‹œë„.`, true, true);
                nextCheckTimeoutId = setTimeout(() => {
                    checkNewCampaigns();
                }, 10000);
            }
        }

        requestNotificationPermission();
        logMessage("ëª¨ë‹ˆí„°ë§ ì‹œì‘. ì²« ìº í˜ì¸ í™•ì¸ì„ ì§„í–‰í•©ë‹ˆë‹¤. ì•Œë¦¼ ì†Œë¦¬ë¥¼ ì›í•˜ì‹œë©´ í˜ì´ì§€ë¥¼ í•œ ë²ˆ í´ë¦­í•´ì£¼ì„¸ìš”.", false, true);
        checkNewCampaigns();
    }; // initializeVipPage í•¨ìˆ˜ ì •ì˜ ë
  </script>
</body>
</html>
